<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Welcome Screen Rediseñado
    - Estilo minimalista y limpio
    - Imagen principal destacada
    - Botón Material Design 3 ancho
-->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="?attr/colorSurface"
    tools:context=".activity.WelcomeActivity">

    <ImageView
        android:id="@+id/imageWelcomeHero"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_bricco"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/textTitleWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textTitleWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/welcome_author"
        android:textAppearance="?attr/textAppearanceHeadlineMedium"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textSubtitleWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageWelcomeHero" />

    <TextView
        android:id="@+id/textSubtitleWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/welcome_message"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/buttonEntrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitleWelcome" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEntrar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:text="@string/welcome_button_enter"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSubtitleWelcome" />

</androidx.constraintlayout.widget.ConstraintLayout>