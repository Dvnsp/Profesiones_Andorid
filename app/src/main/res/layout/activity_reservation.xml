<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reservation_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarReservation"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="Reserva"
        android:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Resumen del carrito -->
    <TextView
        android:id="@+id/textResumenCarrito"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Profesiones en la reserva:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/toolbarReservation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lista de profesiones (texto simple) -->
    <TextView
        android:id="@+id/textListadoProfesiones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1. Fontanero...\n2. Electricista..."
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textResumenCarrito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título fecha -->
    <TextView
        android:id="@+id/textFechaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Selecciona la fecha:"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/textListadoProfesiones"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- DatePicker -->
    <DatePicker
        android:id="@+id/datePickerReserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:calendarViewShown="true"
        app:layout_constraintTop_toBottomOf="@id/textFechaTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título hora -->
    <TextView
        android:id="@+id/textHoraTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Selecciona la hora:"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/datePickerReserva"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TimePicker -->
    <TimePicker
        android:id="@+id/timePickerReserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textHoraTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Botón Confirmar -->
    <Button
        android:id="@+id/buttonConfirmarReserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Confirmar reserva"
        app:layout_constraintTop_toBottomOf="@id/timePickerReserva"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Cancelar -->
    <Button
        android:id="@+id/buttonCancelarReserva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cancelar"
        app:layout_constraintTop_toBottomOf="@id/buttonConfirmarReserva"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
